<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/bar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar">

        <ImageView
            android:id="@+id/user_profile_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bordered_shape"
            android:contentDescription="@string/profile_pic"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/user_profile_pic"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/greetings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/user_profile_pic"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:text="@string/greetings"
            android:textSize="15sp" />

        <ScrollView
            android:id="@+id/user_info_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/greetings"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/appointments_card_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bordered_shape"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:focusable="true"
                    android:foreground="?selectableItemBackground"
                    android:padding="20dp"
                    app:cardBackgroundColor="@color/greyish"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="10dp">

                    <TextView
                        android:id="@+id/appointment_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:text="@string/appointments"
                        android:textAlignment="center"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="30dp"
                        android:contentDescription="@string/appointments"
                        android:padding="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_medical_appointment" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/health_vitals_card_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bordered_shape"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:focusable="true"
                    android:foreground="?selectableItemBackground"
                    android:padding="20dp"
                    app:cardBackgroundColor="@color/greyish"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="10dp">

                    <TextView
                        android:id="@+id/health_vitals_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:text="@string/health_vitals"
                        android:textAlignment="center"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="30dp"
                        android:contentDescription="@string/health_vitals"
                        android:padding="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_vital_signs" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/medecin_dosage_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/appointments_card_view"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:focusable="true"
                    android:foreground="?selectableItemBackground"
                    android:padding="20dp"
                    app:cardBackgroundColor="@color/greyish"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="10dp">

                    <TextView
                        android:id="@+id/medecine_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:text="@string/medicine_dosages"
                        android:textAlignment="center"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="30dp"
                        android:contentDescription="@string/appointments"
                        android:padding="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_medicine_dosage" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/appointments_list_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/medecin_dosage_card_view"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="5dp"
                    android:foreground="?selectableItemBackground"
                    android:padding="20dp"
                    app:cardBackgroundColor="@color/greyish"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/greyish"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/appointment_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@string/appointments"
                            android:textAlignment="center"
                            android:textSize="21sp"
                            android:textStyle="bold" />

                        <ListView
                            android:id="@+id/appointment_list_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:minHeight="48dp"
                            android:padding="10dp"
                            android:paddingHorizontal="5dp"
                            tools:listitem="@layout/support_simple_spinner_dropdown_item" />

                        <Button
                            android:id="@+id/view_all"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/poppins"
                            android:text="@string/view_all"
                            android:textAlignment="textEnd"
                            android:textSize="20sp"
                            app:icon="@drawable/ic_arrow_forward"
                            app:iconGravity="end"
                            app:rippleColor="@color/blue_grey" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>