<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    app:cardBackgroundColor="?android:attr/colorPrimary"
    app:cardCornerRadius="10dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="10dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:id="@+id/medicine_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10sp">

        <ImageView
            android:id="@+id/medicine_img"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_medicine_tablets" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@id/medicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:paddingHorizontal="5sp"
                android:fontFamily="monospace"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Fluoride" />

            <TextView
                android:id="@+id/interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/medicine"
                android:fontFamily="monospace"
                android:paddingHorizontal="5sp"
                android:textAlignment="textStart"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="8 hours interval" />

            <TextView
                android:id="@+id/frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/interval"
                android:fontFamily="monospace"
                android:paddingHorizontal="5sp"
                android:textAlignment="textStart"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="2 times a day" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/colored_border_shape"
            android:gravity="center"
            android:padding="7dp">

            <TextView
                android:id="@+id/dosage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="5sp"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dosage"
                android:fontFamily="@font/poppins"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Tablets" />

        </RelativeLayout>

    </RelativeLayout>



</androidx.cardview.widget.CardView>



