<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appointment_card"
    android:clickable="true"
    android:focusable="true"
    android:checkable="true"
    app:cardCornerRadius="9dp"
    app:cardElevation="10dp"
    android:layout_margin="10sp"
    android:layout_marginBottom="10dp"
    app:cardForegroundColor="?selectableItemBackground">

    <RelativeLayout
        android:id="@+id/appointment_type_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/transparent"
        >

        <TextView
            android:id="@+id/appointment_type_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appointment_type"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/appointment_type_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointment_type_txt"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins"
            android:padding="8dp"
            android:text="Dentist , Dr Adam Smith" />

        <TextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointment_type_txt"
            android:layout_marginTop="35dp"
            android:text="Time"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointment_type_txt"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:text="Location"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_txt"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins"
            android:padding="8dp"
            android:text="10:00 pm" />

        <TextView
            android:id="@+id/loc_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_txt"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins"
            android:padding="8dp"
            android:text="New City Clinic" />

        <TextView
            android:id="@+id/date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_txt"
            android:layout_marginTop="35dp"
            android:layout_alignParentStart="true"
            android:textSize="21sp"
            android:padding="6dp"
            android:textStyle="bold"
            android:text="@string/date" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@id/date_txt">
            <TextView
                android:id="@+id/date_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins"
                android:padding="8dp"
                android:layout_weight="1"
                android:text="21st Aug 2022"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:id="@+id/edit_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15sp"
                    android:layout_marginBottom="20sp"
                    android:padding="5sp"
                    android:text="@string/edit"
                    app:strokeWidth="2dp"
                    app:strokeColor="?android:attr/colorPrimary"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon" />

                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15sp"
                    android:layout_marginBottom="20sp"
                    android:padding="5sp"
                    app:strokeWidth="2dp"
                    app:strokeColor="?android:attr/colorPrimary"
                    android:text="@string/delete"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>